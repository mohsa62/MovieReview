<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr">
    <android.support.constraint.Guideline
        android:id="@+id/Name_Guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".7"/>
        <!--app:layout_constraintGuide_end="200dp"-->

    <ImageView
        android:id="@+id/Poster"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/dogville32x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/Name_Guide"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:contentDescription="Movie Image"
        android:scaleType="fitXY"
        tools:layout_editor_absoluteX="188dp"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/Title_Movie_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@id/Name_Guide"
        android:text="نام فیلم:"
        app:layout_constraintBottom_toTopOf="@+id/Title_Director_Name"
        android:fontFamily="cursive"
        android:textDirection="rtl"
        android:textAlignment="inherit"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/Movie_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@id/Title_Movie_Name"
        android:layout_marginEnd="8dp"
        android:text="داگویل"
        app:layout_constraintBottom_toTopOf="@+id/Director_Name"
        android:fontFamily="cursive"
        android:textDirection="rtl"
        android:textAlignment="inherit"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/Title_Director_Name"
        android:text="نام کارگردان:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/Name_Guide"
        app:layout_constraintTop_toBottomOf="@id/Title_Movie_Name"
        app:layout_constraintBottom_toTopOf="@+id/Title_Movie_Score"
        android:fontFamily="cursive"
        android:textDirection="rtl"
        android:textAlignment="inherit"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/Director_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الخاندرو"
        app:layout_constraintEnd_toStartOf="@id/Title_Director_Name"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/Movie_Name"
        app:layout_constraintBottom_toTopOf="@+id/Movie_Score"
        android:fontFamily="cursive"
        android:textDirection="rtl"
        android:textAlignment="inherit"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Title_Movie_Score"
        android:text="امتیاز:"
        app:layout_constraintTop_toBottomOf="@id/Title_Director_Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/Name_Guide"
        android:layout_marginBottom="30dp"
        android:fontFamily="cursive"
        android:textDirection="rtl"
        android:textAlignment="inherit"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Movie_Score"
        android:text="20"
        app:layout_constraintTop_toBottomOf="@id/Director_Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/Title_Movie_Score"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="cursive"
        android:textDirection="rtl"
        android:textAlignment="inherit"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <android.support.constraint.Guideline
        android:id="@+id/Star_Guide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".3"
        app:layout_constraintStart_toEndOf="parent"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/five_pointed_star"
        />
</android.support.constraint.ConstraintLayout>